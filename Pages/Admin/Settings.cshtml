@page
@model OpenShelf.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Site Settings";
}

<div class="row align-items-center mb-4">
    <div class="col">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a asp-page="/Admin/Index">Admin Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Settings</li>
            </ol>
        </nav>
        <h1 class="h3 mb-0 text-gray-800">Site Settings</h1>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">API Extensions</h6>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Settings.GoogleBooksApiKey" class="form-label">Google Books API Key</label>
                <input asp-for="Settings.GoogleBooksApiKey" class="form-control" />
                <div class="form-text">Optional. Provide an API key to increase your Google Books API quota.</div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="Settings.EnableGoogleBooks" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Settings.EnableGoogleBooks" class="form-check-label">Enable Google Books Data Source</label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="Settings.EnableOpenLibrary" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Settings.EnableOpenLibrary" class="form-check-label">Enable Open Library Data Source</label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="Settings.EnableAudible" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Settings.EnableAudible" class="form-check-label">Enable Audible Data Source</label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="Settings.EnableGoodreads" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Settings.EnableGoodreads" class="form-check-label">Enable Goodreads Data Source</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Feature Flags</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="Settings.EnableChat" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Settings.EnableChat" class="form-check-label">Enable Read-Together Chat</label>
                        <div class="form-text text-muted">Allows users to leave comments on books.</div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="Settings.EnablePublicImport" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Settings.EnablePublicImport" class="form-check-label">Enable Public Import</label>
                        <div class="form-text text-muted">Allows non-admins to import books via ISBN/Search. Note: Ensure you want anonymous users importing books.</div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="Settings.EnablePublicMetadataRefresh" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Settings.EnablePublicMetadataRefresh" class="form-check-label">Enable Public Metadata Refresh</label>
                        <div class="form-text text-muted">Allows non-admins to click 'Refresh Metadata' on books.</div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="Settings.EnableGetThisBookLinks" class="form-check-input" type="checkbox" role="switch" />
                        <label asp-for="Settings.EnableGetThisBookLinks" class="form-check-label">Enable "Get This Book" Links</label>
                        <div class="form-text text-muted">Shows the retail links (Audible, Amazon, etc) on the book details page.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Authentication Providers</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="Settings.EnableGoogleAuth" class="form-check-input" type="checkbox" role="switch" id="googleAuthToggle" />
                        <label asp-for="Settings.EnableGoogleAuth" class="form-check-label">Enable Google Sign-In</label>
                        <div class="form-text text-muted">Allow public users to sign in with their Google account. Their name will auto-populate when adding recommendations or chatting.</div>
                    </div>
                </div>
            </div>
            <div id="googleAuthConfig" class="border rounded p-3 bg-body-secondary" style="display: none;">
                <div class="mb-3">
                    <label asp-for="Settings.GoogleClientId" class="form-label">Google Client ID</label>
                    <input asp-for="Settings.GoogleClientId" class="form-control" placeholder="xxxx.apps.googleusercontent.com" />
                </div>
                <div class="mb-3">
                    <label asp-for="Settings.GoogleClientSecret" class="form-label">Google Client Secret</label>
                    <input asp-for="Settings.GoogleClientSecret" class="form-control" type="password" placeholder="GOCSPX-..." />
                </div>
                <div class="alert alert-info small mb-2">
                    <i class="bi bi-info-circle me-1"></i>
                    Set your <strong>Authorized redirect URI</strong> in Google Cloud Console to:
                    <code>@($"{ViewContext.HttpContext.Request.Scheme}://{ViewContext.HttpContext.Request.Host}/signin-google")</code>
                </div>

                @* ── Collapsible Setup Guide ── *@
                <div class="mt-3">
                    <a class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" href="#googleSetupGuide" role="button" aria-expanded="false">
                        <i class="bi bi-question-circle me-1"></i>How to set up Google Sign-In
                    </a>
                    <div class="collapse mt-2" id="googleSetupGuide">
                        <div class="card card-body small bg-body-tertiary">
                            <h6 class="fw-bold">Step 1 — Create a Google Cloud Project</h6>
                            <ol class="mb-3">
                                <li>Go to the <a href="https://console.cloud.google.com/" target="_blank">Google Cloud Console</a>.</li>
                                <li>Click the project dropdown at the top → <strong>New Project</strong>.</li>
                                <li>Give it a name (e.g. "OpenShelf") and click <strong>Create</strong>.</li>
                                <li>Select the new project from the project dropdown.</li>
                            </ol>

                            <h6 class="fw-bold">Step 2 — Configure the OAuth Consent Screen</h6>
                            <ol class="mb-3">
                                <li>In the left sidebar, navigate to <strong>APIs & Services → OAuth consent screen</strong>.</li>
                                <li>Select <strong>External</strong> (unless you have a Google Workspace domain) and click <strong>Create</strong>.</li>
                                <li>Fill in the required fields:
                                    <ul>
                                        <li><strong>App name</strong>: OpenShelf</li>
                                        <li><strong>User support email</strong>: your email</li>
                                        <li><strong>Developer contact</strong>: your email</li>
                                    </ul>
                                </li>
                                <li>Click <strong>Save and Continue</strong> through the Scopes and Test Users screens (defaults are fine).</li>
                                <li>Click <strong>Back to Dashboard</strong>.</li>
                            </ol>

                            <h6 class="fw-bold">Step 3 — Create OAuth 2.0 Credentials</h6>
                            <ol class="mb-3">
                                <li>Go to <strong>APIs & Services → Credentials</strong>.</li>
                                <li>Click <strong>+ Create Credentials → OAuth client ID</strong>.</li>
                                <li>Set <strong>Application type</strong> to <strong>Web application</strong>.</li>
                                <li>Give it a name (e.g. "OpenShelf Web Client").</li>
                                <li>Under <strong>Authorized redirect URIs</strong>, click <strong>+ Add URI</strong> and enter: <br/>
                                    <code>@($"{ViewContext.HttpContext.Request.Scheme}://{ViewContext.HttpContext.Request.Host}/signin-google")</code>
                                </li>
                                <li>Click <strong>Create</strong>.</li>
                                <li>Copy the <strong>Client ID</strong> and <strong>Client Secret</strong> into the fields above.</li>
                            </ol>

                            <h6 class="fw-bold">Step 4 — Publish the App (Optional)</h6>
                            <ol class="mb-0">
                                <li>While in "Testing" mode, only users you add as test users can sign in.</li>
                                <li>To allow anyone with a Google account, go back to the <strong>OAuth consent screen</strong> and click <strong>Publish App</strong>.</li>
                                <li>For small/private deployments, you can stay in Testing mode and just add your users' email addresses.</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            @* ── Require Login toggle — only shown when an auth provider is on ── *@
            <div id="requireLoginSection" class="mt-3 border rounded p-3 bg-body-secondary" style="display: none;">
                <div class="form-check form-switch">
                    <input asp-for="Settings.RequireLogin" class="form-check-input" type="checkbox" role="switch" id="requireLoginToggle" />
                    <label asp-for="Settings.RequireLogin" class="form-check-label">Require Sign-In to Access App</label>
                    <div class="form-text text-muted">When enabled, visitors must sign in before they can browse the shelf. Admin login is always available.</div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <button type="submit" class="btn btn-primary">Save Settings</button>
    </div>
</form>

@section Scripts {
    <script>
        const googleToggle = document.getElementById('googleAuthToggle');
        const googleConfig = document.getElementById('googleAuthConfig');
        const requireLoginSection = document.getElementById('requireLoginSection');
        const requireLoginToggle = document.getElementById('requireLoginToggle');

        function updateVisibility() {
            const anyAuthEnabled = googleToggle.checked;
            googleConfig.style.display = googleToggle.checked ? 'block' : 'none';
            requireLoginSection.style.display = anyAuthEnabled ? 'block' : 'none';

            // If no auth providers are on, force RequireLogin off
            if (!anyAuthEnabled) {
                requireLoginToggle.checked = false;
            }
        }

        googleToggle.addEventListener('change', updateVisibility);
        updateVisibility();
    </script>
}
