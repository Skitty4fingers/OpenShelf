@page
@model OpenShelf.Pages.Admin.RestoreModel
@{
    ViewData["Title"] = "Restore Backup";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-upload"></i> Restore Database Backup</h1>
        <a asp-page="/Admin/Index" class="btn btn-outline-secondary">Back to Admin</a>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-@Model.MessageType alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <i class="bi bi-exclamation-triangle-fill"></i> <strong>Warning</strong>
        </div>
        <div class="card-body">
            <p class="mb-2">This will restore your database from a backup CSV file exported using the "Export Full Backup" feature.</p>
            <ul class="mb-0">
                <li><strong>Merge Mode:</strong> Adds data from backup without deleting existing data</li>
                <li><strong>Clear & Restore:</strong> Deletes ALL existing data before restoring (cannot be undone!)</li>
            </ul>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-light">
            <i class="bi bi-file-earmark-arrow-up"></i> Upload Backup File
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" id="restoreForm">
                <div class="mb-3">
                    <label for="backupFile" class="form-label">Select Backup CSV File</label>
                    <input class="form-control" type="file" id="backupFile" name="backupFile" accept=".csv" required>
                    <div class="form-text">Upload a CSV file created by the "Export Full Backup" feature.</div>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="clearExisting" name="clearExisting" value="true">
                    <label class="form-check-label text-danger" for="clearExisting">
                        <strong>Clear all existing data before restore</strong> (This will delete everything!)
                    </label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg" onclick="return confirmRestore()">
                        <i class="bi bi-upload"></i> Start Restore
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.ValidationResults != null && Model.ValidationResults.Any())
    {
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-info text-white">
                <i class="bi bi-info-circle"></i> Import Results
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var result in Model.ValidationResults)
                    {
                        <li class="list-group-item">@result</li>
                    }
                </ul>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function confirmRestore() {
            const clearExisting = document.getElementById('clearExisting').checked;
            const fileInput = document.getElementById('backupFile');
            
            if (!fileInput.files || fileInput.files.length === 0) {
                alert('Please select a backup file.');
                return false;
            }

            if (clearExisting) {
                return confirm('⚠️ WARNING: This will DELETE ALL existing data and restore from backup.\n\nThis action CANNOT be undone!\n\nAre you absolutely sure you want to continue?');
            } else {
                return confirm('This will merge the backup data with your existing data.\n\nContinue?');
            }
        }
    </script>
}
