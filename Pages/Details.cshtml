<script>
    let bulkEditMode = false;
    
    function toggleBulkEdit() {
        bulkEditMode = !bulkEditMode;
        const checkboxes = document.querySelectorAll('.bulk-checkbox-container');
        const handles = document.querySelectorAll('.handle');
        const toggle = document.getElementById('bulkEditToggle');
        const selectAllContainer = document.getElementById('selectAllContainer');
        
        checkboxes.forEach(cb => {
            if (bulkEditMode) {
                cb.classList.remove('d-none');
            } else {
                cb.classList.add('d-none');
                cb.querySelector('input').checked = false;
            }
        });
        
        handles.forEach(h => {
            if (bulkEditMode) {
                h.classList.add('d-none');
            } else {
                h.classList.remove('d-none');
            }
        });
        
        if (bulkEditMode) {
            toggle.classList.remove('btn-outline-secondary');
            toggle.classList.add('btn-secondary');
            toggle.innerHTML = '<i class="bi bi-x-lg"></i> Cancel';
            selectAllContainer.classList.remove('d-none');
        } else {
            toggle.classList.remove('btn-secondary');
            toggle.classList.add('btn-outline-secondary');
            toggle.innerHTML = '<i class="bi bi-check2-square"></i> Bulk Edit';
            selectAllContainer.classList.add('d-none');
            document.getElementById('selectAllCheckbox').checked = false;
            document.getElementById('bulkEditBtn').classList.add('d-none');
            document.getElementById('bulkRemoveBtn').classList.add('d-none');
        }
        
        updateBulkEditButton();
    }
    
    function toggleSelectAll() {
        const selectAll = document.getElementById('selectAllCheckbox');
        const checkboxes = document.querySelectorAll('.bulk-select-checkbox');
        
        checkboxes.forEach(cb => {
            cb.checked = selectAll.checked;
        });
        
        updateBulkEditButton();
    }
    
    function updateBulkEditButton() {
        const selected = document.querySelectorAll('.bulk-select-checkbox:checked');
        const count = selected.length;
        const editBtn = document.getElementById('bulkEditBtn');
        const removeBtn = document.getElementById('bulkRemoveBtn');
        const countSpan = document.getElementById('selectedCount');
        const countSpanRemove = document.getElementById('selectedCountRemove');
        
        countSpan.textContent = count;
        countSpanRemove.textContent = count;
        
        if (count > 0) {
            editBtn.classList.remove('d-none');
            removeBtn.classList.remove('d-none');
            // Store selected IDs for form submission
            const ids = Array.from(selected).map(cb => cb.value).join(',');
            document.getElementById('bulkEditBookIds').value = ids;
        } else {
            editBtn.classList.add('d-none');
            removeBtn.classList.add('d-none');
        }
    }
    
    function confirmBulkRemove() {
        const selected = document.querySelectorAll('.bulk-select-checkbox:checked');
        const count = selected.length;
        
        if (count === 0) return;
        
        if (confirm(`Are you sure you want to remove ${count} book(s) from this series?`)) {
            const ids = Array.from(selected).map(cb => cb.value).join(',');
            
            // Create and submit form
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '?handler=BulkRemove&id=@Model.Recommendation.Id';
            
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]').cloneNode(true);
            form.appendChild(tokenInput);
            
            const idsInput = document.createElement('input');
            idsInput.type = 'hidden';
            idsInput.name = 'bookIds';
            idsInput.value = ids;
            form.appendChild(idsInput);
            
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>
